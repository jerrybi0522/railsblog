<div class="form">
	<%= form_for Post.new do |f| %>
		<%=f.text_field :title, :maxlength => 50 %><br><br>

		<%=f.text_area :body, :cols => 50, :rows => 10 %><br>

		<%=f.submit %>
	<% end %>
</div>

<div class="post_container">
	<% @posts.last(10).reverse.each do |post| %>
		<div class="user-post">
			<h3><%= link_to post.title, post_path(post) %></h3>
			<% if post.user %>
				<%= link_to post.user.username, user_path(post.user) %><br><br>
			<% end %>
			<%= post.body %><br><br>
		</div>
		<br>
	<% end %>
</div>