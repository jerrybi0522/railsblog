<div class="form">
	<%= form_for @post do |f| %>
		<%=f.text_field :title, :value => @post.title, :maxlength => 50 %><br><br>

		<%=f.text_area :body, :value => @post.body, :cols => 50, :rows => 10 %><br>

		<%=f.submit :update %><br>
	<% end %>

	<%= button_to "Delete Post", post_path(@post), method: :delete %>
</div>